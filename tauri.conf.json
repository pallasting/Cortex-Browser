{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cortex Browser",
  "version": "0.1.0",
  "identifier": "com.cortex.browser",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Cortex Browser",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Â© 2024 Cortex Browser",
    "resources": [],
    "shortDescription": "Cortex Browser - Intelligent Web Navigation",
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "all": true,
      "open": true
    }
  }
}